{
    "tesseract": {
        "psm": 3,
        "oem": 3,
        "lang": "eng",
        "config_params": "--dpi 300"
    },
    "preprocessing": {
        "resize_width": 1800,
        "threshold_method": "adaptive",
        "denoise": true
    },
    "extraction": {
        "min_confidence": 60,
        "field_patterns": {
            "name": "Name:\\s*([A-Z][a-z]+(?:\\s+[A-Z][a-z]+)*)",
            "college": "College:\\s*([A-Za-z\\s.,&\\-]+)",
            "roll_number": "Roll Number:\\s*([A-Z0-9]{6,15})",
            "branch": "Branch:\\s*([A-Za-z\\s]+)"
        }
    }
} 